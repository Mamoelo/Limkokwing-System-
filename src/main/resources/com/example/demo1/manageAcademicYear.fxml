<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f5dc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.example.demo1.ManageAcademicYearController">
    <Text layoutX="50.0" layoutY="30.0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #6a5acd;" text="Manage Academic Year" />

    <VBox layoutX="32.0" layoutY="44.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #6a5acd; -fx-border-width: 2;">
        <ListView fx:id="academicYearListView" prefHeight="250.0" prefWidth="500.0" style="-fx-border-color: #6a5acd; -fx-background-color: #ffffff; -fx-font-size: 16; -fx-text-fill: #333333;" />
    </VBox>

    <Button fx:id="addAcademicYearButton" layoutX="53.0" layoutY="343.0" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #6a5acd; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Add Academic Year" onAction="#handleAddAcademicYear"/>

    <Button fx:id="exitToMainMenuButton" layoutX="353.0" layoutY="343.0" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #5bc0de; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Return to Main Menu" onAction="#handleExitToMainMenu"/>
</AnchorPane>
