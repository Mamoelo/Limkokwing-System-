<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.CourseManagementController">
    <Text layoutX="50.0" layoutY="30.0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #4682b4;" text="Manage Course Page" />

    <VBox layoutX="12.0" layoutY="75.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #4682b4; -fx-border-width: 2;">
        <TextField fx:id="chapterTitleField" promptText="Enter Chapter Title" style="-fx-font-size: 16; -fx-padding: 10; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
        <TextArea fx:id="learningOutcomesArea" promptText="Enter Learning Outcomes" style="-fx-font-size: 16; -fx-padding: 10; -fx-border-color: #4682b4; -fx-border-radius: 5;" wrapText="true" />

        <Button fx:id="addChapterButton" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #4682b4; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Add Chapter" onAction="#addChapter" />

        <!-- Return to Main Menu Button -->
        <Button fx:id="returnButton" layoutX="400.0" layoutY="380.0" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #5bc0de; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Return to Main Menu" onAction="#returnToMainMenu" />
    </VBox>
</AnchorPane>
