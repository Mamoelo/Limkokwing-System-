<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f5dc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.PupilManagementController">
    <Text layoutX="50.0" layoutY="30.0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #6a5acd;" text="Manage Students" />

    <VBox layoutX="50.0" layoutY="99.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #6a5acd; -fx-border-width: 2;">
        <!-- Student Name Field -->
        <TextField fx:id="studentNameField" promptText="Enter Student Name" style="-fx-font-size: 16; -fx-padding: 10;" />
    </VBox>

    <Button fx:id="addStudentButton" layoutX="50.0" layoutY="300.0" onAction="#handleAddStudent" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #6a5acd; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Add Student" />
    <Button fx:id="returnToMainMenuButton" layoutX="199.0" layoutY="300.0" onAction="#handleReturnToMainMenu" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #5bc0de; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Return to Main Menu" />
</AnchorPane>
