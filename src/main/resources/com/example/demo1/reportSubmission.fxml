<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="674.0" prefWidth="604.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.ReportSubmissionController">
    <children>
        <Label layoutX="200.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Submit Your Report" />

        <Label layoutX="50.0" layoutY="60.0" style="-fx-font-size: 18;" text="Select Classes" />
        <VBox layoutX="50.0" layoutY="90.0" spacing="10.0">
            <ComboBox fx:id="classComboBox" style="-fx-font-size: 16;" />
        </VBox>

        <Label layoutX="50.0" layoutY="235.0" style="-fx-font-size: 18;" text="Module Challenges" />
        <TextArea fx:id="challengesTextArea" layoutX="50.0" layoutY="278.0" prefHeight="70.0" prefWidth="500.0" promptText="Describe the challenges faced in the module..." wrapText="true" />

        <Label layoutX="50.0" layoutY="377.0" style="-fx-font-size: 18;" text="Recommendations" />
        <TextArea fx:id="recommendationsTextArea" layoutX="50.0" layoutY="424.0" prefHeight="70.0" prefWidth="500.0" promptText="Provide your recommendations..." wrapText="true" />

        <Button fx:id="submitButton" layoutX="116.0" layoutY="590.0" onAction="#handleSubmit" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #6a5acd; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Submit" />
        <Button fx:id="returnButton" layoutX="291.0" layoutY="590.0" onAction="#handleReturn" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #5bc0de; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Return to Main Menu" />

        <Label layoutX="50.0" layoutY="160.0" style="-fx-font-size: 18;" text="Select Modules" />
        <VBox layoutX="50.0" layoutY="190.0" spacing="10.0">
            <ComboBox fx:id="moduleComboBox" style="-fx-font-size: 16;" />
        </VBox>
    </children>
</AnchorPane>
